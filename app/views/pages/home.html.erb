<%= link_to "Login", new_user_session_path, class: "nav-link" %>
<div class="container">
<!--   <h1>Trip To NZ</h1> -->
  <div class="parts-grid">
    <% @parts.each do |part| %>
      <div>
        <%= cl_image_tag part.photo.key, height: 300, width: 400, crop: :fill if part.photo.attached? %>
        <h2><%= part.title %></h2>
        <ul>
          <% part.chapters.each do |chapter| %>
            <li><%= link_to chapter.title, chapter_path(chapter) %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
</div>


